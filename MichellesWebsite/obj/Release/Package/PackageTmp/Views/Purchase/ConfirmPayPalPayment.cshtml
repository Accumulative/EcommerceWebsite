@model MichellesWebsite.Models.ApplicationCart
@{
    ViewBag.Title = "Confirm PayPal Payment";
}

<h2>
    @ViewBag.Title
</h2>

<p>
    Confirm Purchase for;
</p>
<ul>
    @if (Model.PurchaseDescription != null)
    {
        <li>Purchase Description: @Model.PurchaseDescription</li>
    }
    <li>Basket cost: @Model.TotalPrice @Model.Currency</li>
    <li>Delivery cost: @Model.deliveryPrice @Model.Currency</li>
    <li>Total cost: @(Model.TotalPrice+Model.deliveryPrice) @Model.Currency</li>
</ul>

@if (Model.Items != null)
{
    <p>
        Your cart contents;
    </p>
    <ul>
        @foreach (MichellesWebsite.Models.ApplicationCartItem item in Model.Items)
        {
            <li>@(item.Quantity + " x " + item.Name + " @ " + item.Price + " each")</li>
        }
    </ul>
}

@using (Html.BeginForm())
{
    <input type="submit" value="Confirm Payment" />
}