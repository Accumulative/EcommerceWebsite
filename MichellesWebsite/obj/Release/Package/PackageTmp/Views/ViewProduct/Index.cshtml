@model IEnumerable<MichellesWebsite.Models.ProductViewModel>

@{
    ViewBag.Title = ViewRes.SharedStrings.NavBarProducts;
}

<h2>@ViewRes.SharedStrings.NavBarProducts</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(x => x.picture)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.name)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.description)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.price)
        </th>
        <th>
            @ViewRes.SharedStrings.ProductsOptions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="https://chineselearningblob.blob.core.windows.net/containername/@item.picture" alt="@item.picture" width="150" height="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>

            <td>
                @ViewBag.Currency @Html.DisplayFor(modelItem => item.price)
            </td>
            
            <td>
                @Html.ActionLink(@ViewRes.SharedStrings.SaleDetails, "Details", "ViewProduct", new { productId = item.ID }, null)
            </td>
            
        </tr>

    }
</table>

