@model MichellesWebsite.Models.ProductPriceView

@{
    ViewBag.Title = "Update Price";
}

<h2>Price</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Update Price</h4>
        <hr />

        @Html.HiddenFor(model => model.newProductPrice.productID);

        <div class="form-group">
            @Html.LabelFor(model => model.newProductPrice.price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.newProductPrice.price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.newProductPrice.price, "",new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.newProductPrice.country, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.newProductPrice.country, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.newProductPrice.country, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="New Price" class="btn btn-default" />
            </div>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productPrices[0].dateFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productPrices[0].dateTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productPrices[0].price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productPrices[0].country)
            </th>
        </tr>

        @foreach (var item in Model.productPrices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.dateFrom)
                </td>
                <td>
                    @(item.dateTo == null ? Html.Raw("Ongoing") : Html.DisplayFor(modelItem => item.dateTo))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.country)
                </td>
            </tr>
        }

    </table>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
